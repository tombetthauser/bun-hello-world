<!DOCTYPE html>
<html>
    <title>All Posts</title>
    <body>
        <h1>All Posts</h1>
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div>
                    <h3>
                        <%= post.title %>
                    </h3>
                    <p>
                        <%= post.body %>
                    </p>
                    <p>
                        by <%= post.user.name %>
                    </p>
                    <p>
                        at <%= post.created_at %>
                    </p>
                    <div>
                        <form action="/posts/<%= post.id %>/delete" method="POST">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">delete</button>
                        </form>
                    </div>
                </div>
                <hr/>
            <% }) %>
        <% } else { %>
            <p>No posts at this time</p>
        <% } %>
    </body>
</html>
</html>